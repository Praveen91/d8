

{% set classes = [
   current_user_is_owner ? 'movie--current-user-is-owner',
  ] %}

{# {{ dump(_context|keys) }} #}

{# <h2>{{ simple_string }}</h2> #}

<h2 {{attributes.addClass(classes)}}>{{ simple_string }}</h2>

{% for actor in content.field_actors['#items'].getValue() %}
    {{actor.value}}<br>
{% endfor %}

{% if content.field_movie_poster['#items'].getValue()|first.value == "1" %}
    <div class="movie-poster">
        {{content.field_poster}}
    </div>
{% else %}
    <h3>I don't want you to see Movie Poster</h3>
{% endif %}

<div class="director">
    {{content.field_director}}
</div>
